// ملف service-worker.js

const CACHE_NAME = 'souq-aldeir-v1.0';
const urlsToCache = [
  '/Souq-Aldeir/index.html',
  '/Souq-Aldeir/style.css',
  '/Souq-Aldeir/responsive.css',
  '/Souq-Aldeir/app.js',
  '/Souq-Aldeir/auth.js',
  '/Souq-Aldeir/ads.js',
  '/Souq-Aldeir/manifest.json',
  'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css',
  'https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js',
  'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css',
  'https://fonts.googleapis.com/css2?family=Tajawal:wght@300;400;700;800&display=swap',
  'https://cdn-icons-png.flaticon.com/512/891/891419.png'
];

// تثبيت Service Worker
self.addEventListener('install', event => {
  event.waitUntil(
    caches.open(CACHE_NAME)
      .then(cache => {
        console.log('تم فتح ذاكرة التخزين المؤقت');
        return cache.addAll(urlsToCache);
      })
      .then(() => self.skipWaiting())
  );
});

// تفعيل Service Worker
self.addEventListener('activate', event => {
  event.waitUntil(
    caches.keys().then(cacheNames => {
      return Promise.all(
        cacheNames.map(cacheName => {
          if (cacheName !== CACHE_NAME) {
            console.log('حذف ذاكرة التخزين القديمة:', cacheName);
            return caches.delete(cacheName);
          }
        })
      );
    }).then(() => self.clients.claim())
  );
});

// اعتراض الطلبات
self.addEventListener('fetch', event => {
  event.respondWith(
    caches.match(event.request)
      .then(response => {
        // إذا كان المورد موجود في ذاكرة التخزين المؤقت، قم بإرجاعه
        if (response) {
          return response;
        }
        
        // إذا لم يكن موجود، قم بتحميله من الشبكة
        return fetch(event.request)
          .then(response => {
            // تحقق من أن الرد صالح
            if (!response || response.status !== 200 || response.type !== 'basic') {
              return response;
            }
            
            // استنساخ الرد لأن الرد عبارة عن تدفق ويمكن استخدامه مرة واحدة فقط
            const responseToCache = response.clone();
            
            // فتح ذاكرة التخزين المؤقت
            caches.open(CACHE_NAME)
              .then(cache => {
                // تخزين المورد في ذاكرة التخزين المؤقت
                cache.put(event.request, responseToCache);
              });
            
            return response;
          })
          .catch(error => {
            // في حالة فشل الاتصال بالشبكة، يمكن عرض صفحة بديلة
            console.log('فشل في جلب المورد:', event.request.url, error);
            
            // إذا كان الطلب لصفحة HTML، يمكن عرض صفحة بديلة
            if (event.request.headers.get('accept').includes('text/html')) {
              return caches.match('/Souq-Aldeir/index.html');
            }
            
            // يمكن إضافة ردود بديلة لأنواع أخرى من الملفات هنا
            return new Response('تعذر الاتصال بالشبكة. يرجى التحقق من اتصالك بالإنترنت.', {
              status: 408,
              headers: { 'Content-Type': 'text/plain; charset=utf-8' }
            });
          });
      })
  );
});

// معالجة رسائل Push
self.addEventListener('push', event => {
  const options = {
    body: event.data.text(),
    icon: 'https://cdn-icons-png.flaticon.com/512/891/891419.png',
    badge: 'https://cdn-icons-png.flaticon.com/512/891/891419.png',
    vibrate: [200, 100, 200],
    data: {
      dateOfArrival: Date.now(),
      primaryKey: 1
    },
    actions: [
      {
        action: 'explore',
        title: 'استكشاف الإعلانات',
        icon: 'https://cdn-icons-png.flaticon.com/512/891/891419.png'
      },
      {
        action: 'close',
        title: 'إغلاق',
        icon: 'https://cdn-icons-png.flaticon.com/512/891/891419.png'
      }
    ]
  };
  
  event.waitUntil(
    self.registration.showNotification('سوق الدير الزور', options)
  );
});

// معالجة نقرات الإشعارات
self.addEventListener('notificationclick', event => {
  console.log('تم النقر على الإشعار:', event.notification.tag);
  event.notification.close();
  
  if (event.action === 'explore') {
    // افتح التطبيق عند النقر على "استكشاف"
    event.waitUntil(
      clients.openWindow('/Souq-Aldeir/index.html')
    );
  } else if (event.action === 'close') {
    // لا تفعل شيئاً عند النقر على "إغلاق"
    console.log('تم إغلاق الإشعار');
  } else {
    // افتح التطبيق عند النقر على الإشعار نفسه
    event.waitUntil(
      clients.openWindow('/Souq-Aldeir/index.html')
    );
  }
});

// مزامنة الخلفية
self.addEventListener('sync', event => {
  if (event.tag === 'sync-ads') {
    event.waitUntil(syncAds());
  }
});

// مزامنة الإعلانات
function syncAds() {
  return new Promise((resolve, reject) => {
    // هنا يمكنك إضافة كود لمزامنة البيانات مع الخادم
    console.log('مزامنة الإعلانات...');
    
    // مثال: حفظ الإعلانات المحلية على الخادم
    const pendingAds = JSON.parse(localStorage.getItem('pendingAds') || '[]');
    
    if (pendingAds.length > 0) {
      // إرسال الإعلانات إلى الخادم
      fetch('/api/ads/sync', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ ads: pendingAds })
      })
      .then(response => response.json())
      .then(data => {
        console.log('تمت مزامنة الإعلانات:', data);
        localStorage.removeItem('pendingAds');
        resolve();
      })
      .catch(error => {
        console.error('خطأ في مزامنة الإعلانات:', error);
        reject(error);
      });
    } else {
      console.log('لا توجد إعلانات معلقة للمزامنة');
      resolve();
    }
  });
}

// تحديث ذاكرة التخزين المؤقت
self.addEventListener('message', event => {
  if (event.data.action === 'skipWaiting') {
    self.skipWaiting();
  }
  
  if (event.data.action === 'updateCache') {
    caches.open(CACHE_NAME)
      .then(cache => {
        return cache.addAll(urlsToCache);
      })
      .then(() => {
        console.log('تم تحديث ذاكرة التخزين المؤقت');
        event.source.postMessage({ action: 'cacheUpdated' });
      });
  }
});

// إضافة رد افتراضي للطلبات التي لا يمكن جلبها
self.addEventListener('fetch', event => {
  if (event.request.mode === 'navigate') {
    event.respondWith(
      fetch(event.request)
        .catch(() => {
          return caches.match('/Souq-Aldeir/index.html');
        })
    );
    return;
  }
});